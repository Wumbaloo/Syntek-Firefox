{
  "author": "William GAUDFRIN",
  "manifest_version": 2,
  "name": "SynTek",
  "version": "0.1.5",
  "description": "Check your Epitech Planning from anywhere and be warned!",

  "background": {
    "scripts": ["sync.js"]
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png"
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/showEvents.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "64": "icons/icon-64.png"
    }
  },
  "chrome_url_overrides" : {
    "newtab": "new_tab/new_tab.html"
  },
  "content_scripts": [
    {
        "matches": ["https://intra.epitech.eu/planning*"],
        "js": ["sync.js"]
    }
  ],

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications",
    "https://intra.epitech.eu/"
  ],

  "applications": {
    "gecko": {
      "id": "{6c3f3010-0461-11e9-b568-0800200c9a66}",
      "strict_min_version": "57.0a1"
    }
  }
}
